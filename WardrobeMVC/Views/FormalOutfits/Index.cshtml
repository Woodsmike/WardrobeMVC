@model IEnumerable<WardrobeMVC.Models.FormalOutfit>

@{
    ViewBag.Title = "Formal";
}

<h1 style="text-align:center; color:#B8A499;">Formal Oufits</h1>

<h3 class="reviewH3 softWhiteBG">
    @Html.ActionLink("Create a New Outfit", "Create")
</h3>

<div class="row container-fluid" style="margin:auto;">
    @foreach (var item in Model)
    {
        <div style=" border: .5px solid black;">
            <h3 style="text-align:center; color:#FFF6F0; font-size: 30px; padding-bottom:20px;">
                <span>
                    @Html.DisplayFor(modelItem => item.Outfit.OutfitName)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Html.ActionLink("View Details", "Details", new { id = item.FormalOutfitID }, new { role = "button", @class = "btn btn-primary" })
                </span>
                </h3>
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="thumbnail">
                        <div class="caption text-center">
                            <h3>@Html.DisplayFor(modelItem => item.FormalTop.FormalTopName)</h3>
                            <p>
                                <img src="@Url.Content("~/Content/Images/TuxedoCoat.jpg")" class="img-thumbnail img-responsive imgIndex" />
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="thumbnail">
                        <div class="caption text-center">
                            <h3>@Html.DisplayFor(modelItem => item.FormalBottom.FormalBottomName)</h3>
                            <p>
                                <img src="@Url.Content("~/Content/Images/TuxedoSlacks.jpg" )" class="img-thumbnail img-responsive imgIndex" />
                            </p>

                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="thumbnail">
                        <div class="caption text-center">
                            <h3>@Html.DisplayFor(modelItem => item.FormalSho.FormalShoesName)</h3>
                            <p>
                                <img src="@Url.Content("~/Content/Images/TuxedoShoes.jpg")" class="img-thumbnail img-responsive imgIndex" />
                            </p>

                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="thumbnail">
                        <div class="caption text-center">
                            <h3>@Html.DisplayFor(modelItem => item.FormalAccessory.FormalAccessoryName)</h3>
                            <p>
                                <img src="@Url.Content("~/Content/Images/watchAccessory.jpg")" class="img-thumbnail img-responsive imgIndex" />
                            </p>

                        </div>
                    </div>
                </div>
                <div class="row">
                    
                </div>
        </div><br />
    }

</div>

