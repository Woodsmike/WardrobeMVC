@model IEnumerable<WardrobeMVC.Models.FormalTop>

@{
    ViewBag.Title = "Formal Top";
}

<div>
    <h1 class="reviewH1 softWhiteBG">Formal Tops</h1>

    <h3 class="reviewH3 softWhiteBG">
        @Html.ActionLink("What formal tops do you want to add?", "Create")
    </h3>
</div>
<div class="container" style="margin:auto; margin-top: 20px;">

    @foreach (var item in Model)
    {
        <div class="col-md-5 detail" style="margin-right:15px; margin-top:75px;">
            <h1 class="well well-sm wellBGShoes">
                <span><span>Brand:  </span><span style="float:right;">@Html.DisplayFor(modelItem => item.FormalTopName)</span></span>
            </h1>
            <h3 class="well well-sm wellBGShoes">
                <span>Type: </span><span style="float:right;"> @Html.DisplayFor(modelItem => item.FormalTopType)</span>
            </h3>
            
        </div>
        <div class="col-md-5 detail" style="margin:auto; margin-left:150px; padding-bottom: 5.2px; margin-bottom:25px;">
            <h2>
                <img class="myImgShoes" src=@Url.Content(item.FormalTopPhoto) />
            </h2>
            <p style="font-size:25px; text-align:center;">
                @Html.ActionLink("Edit", "Edit", new { id = item.FormalTopID }) &nbsp; &nbsp;|&nbsp; &nbsp;
                @Html.ActionLink("Details", "Details", new { id = item.FormalTopID })
            </p>
        </div>
        <br /><br />
    }
</div>


