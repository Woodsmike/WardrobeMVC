@model IEnumerable<WardrobeMVC.Models.LeisureAccessory>

@{
    ViewBag.Title = "Leisure Accessory";
}

<div>
    <h1 class="reviewH1 softWhiteBG">Leisure Accessories</h1>

    <h3 class="reviewH3 softWhiteBG">
        @Html.ActionLink("What leisure accessories do you want to add?", "Create")
    </h3>
</div>
<div class="container-fluid softWhiteBG1" style="margin:auto; padding-top:25px; margin-bottom:0;">

    <div class="row">
        @foreach (var item in Model)


        {
            <div class="col-md-2 card">
                <a target="_blank" href=@Url.Content(item.LeisureAccessoryPhoto)>
                    <img class="myImgAcc" src=@Url.Content(item.LeisureAccessoryPhoto) alt="Forest">
                </a>
                <h4>
                    @Html.DisplayFor(modelItem => item.LeisureAccessoryName)
                </h4>
                <h4>
                    @Html.DisplayFor(modelItem => item.LeisureAccessoryType)
                </h4>



                <p style="font-size:25px; text-align:center;">
                    @Html.ActionLink("Edit", "Edit", new { id = item.LeisureAccessoryID }) &nbsp; &nbsp;|&nbsp; &nbsp;
                    @Html.ActionLink("Details", "Details", new { id = item.LeisureAccessoryID })

                </p>

            </div>
        }
    </div>
</div>

